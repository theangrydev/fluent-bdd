<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>fluent-bdd</artifactId>
        <groupId>io.github.theangrydev.fluentbdd</groupId>
        <version>8.2.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>assertj-extensions</artifactId>

    <dependencies>
        <!-- Compile dependencies -->
        <dependency>
            <groupId>io.github.theangrydev.fluentbdd</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>${assertj.core.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${maven.javadoc.plugin.version}</version>
                <configuration>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
            </plugin>

            <plugin>
                <groupId>io.github.theangrydev.fluentbdd</groupId>
                <artifactId>assertj-extensions-generator</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>generate-fluent-assertj</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-sources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <configuration combine.self="override">
                    <skip>true</skip><!-- TODO: https://github.com/theangrydev/fluent-bdd/issues/14 remove and add test coverage -->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>